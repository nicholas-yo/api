{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "baseUrl": "src",
    "paths": {
      "@database/*": ["./database/*"],
			"@utils/*": ["./utils/*"]
    },
    "rootDir": "src",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
